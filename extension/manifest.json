{
	"manifest_version": 2,
	"description": "Watch videos in sync",

	"name": "VideoSync",
	"version": "1.0",

	"permissions": [
	  	"tabs",
	  	"activeTab",
	  	"http://*/*",
	  	"https://*/*"
	],

	"icons": {
		"48": "icons/logo48.png",
		"96": "icons/logo96.png"
	},

  	"background": {
    	"scripts": ["background.js"]
  	},

	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/watch*"],
			"js": ["main/main.js"]
		}
	],

	"page_action": {
		"show_matches": ["*://www.youtube.com/watch*"],
		"default_icon": "icons/logo48.png",
		"default_popup": "app/app.html",
		"default_title": "VideoSync"
	}
}